<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarredStationsActivity">

    <TextView
        android:id="@+id/titlestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starred_stations"
        android:textColor="#000000"
        android:textSize="28sp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />


    <EditText
        android:id="@+id/searchtxt"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Search..."
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/titlestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addbtn"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/searchicon"
        app:layout_constraintTop_toTopOf="@id/searchtxt"
        app:layout_constraintBottom_toBottomOf="@id/searchtxt"
        app:layout_constraintEnd_toEndOf="@id/searchtxt"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/searchicon" />

    <ImageView
        android:id="@+id/addbtn"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/addicon"
        app:layout_constraintTop_toBottomOf="@+id/titlestar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchtxt"
        android:layout_marginTop="21dp"/>

    <ListView
        android:id="@+id/addlist"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toTopOf="@layout/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/searchtxt">
    </ListView>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>