<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarredStationsActivity">

    <TextView
        android:id="@+id/titlestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starred_stations"
        android:textColor="#000000"
        android:textSize="28sp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />


    <EditText
        android:id="@+id/searchtxt"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Search..."
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/titlestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addbtn"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/addbtn"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:srcCompat="@drawable/addicon"
        app:layout_constraintTop_toBottomOf="@+id/titlestar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchtxt"
        android:layout_marginTop="21dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/t1"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/addlist"
                app:layout_constraintBottom_toTopOf="@id/t2"
                android:text="Home" />

            <TextView
                android:id="@+id/t2"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t1"
                app:layout_constraintBottom_toTopOf="@id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NS19: Toa Payoh" />

            <TextView
                android:id="@+id/tl1"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#ff00"
                app:layout_constraintTop_toTopOf="@id/t1"
                app:layout_constraintBottom_toBottomOf="@id/t2"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North-South Line" />

            <ImageView
                android:id="@+id/i1"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/t1"
                app:layout_constraintBottom_toBottomOf="@id/t1"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                app:srcCompat="@drawable/deleteicon" />

            <TextView
                android:id="@+id/t3"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintBottom_toTopOf="@id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uncle Mark's" />

            <TextView
                android:id="@+id/t4"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t3"
                app:layout_constraintBottom_toTopOf="@id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EW02: Tampines" />

            <TextView
                android:id="@+id/tl2"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00ff00"
                app:layout_constraintTop_toTopOf="@id/t3"
                app:layout_constraintBottom_toBottomOf="@id/t4"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="East-West Line" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/t3"
                app:layout_constraintBottom_toBottomOf="@id/t3"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                app:srcCompat="@drawable/deleteicon" />

            <TextView
                android:id="@+id/t5"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/t4"
                app:layout_constraintBottom_toTopOf="@id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grandma's" />

            <TextView
                android:id="@+id/t6"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t5"
                app:layout_constraintBottom_toTopOf="@id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DT03: Hillview" />

            <TextView
                android:id="@+id/tl3"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#87CEFA"
                app:layout_constraintTop_toTopOf="@id/t5"
                app:layout_constraintBottom_toBottomOf="@id/t6"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downtown Line" />

            <ImageView
                android:id="@+id/i3"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/t5"
                app:layout_constraintBottom_toBottomOf="@id/t5"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                app:srcCompat="@drawable/deleteicon" />

            <TextView
                android:id="@+id/t7"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/t6"
                app:layout_constraintBottom_toTopOf="@id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School" />

            <TextView
                android:id="@+id/t8"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t7"
                app:layout_constraintBottom_toTopOf="@id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CC24: Kent Ridge" />

            <TextView
                android:id="@+id/tl4"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#ffff00"
                app:layout_constraintTop_toTopOf="@id/t7"
                app:layout_constraintBottom_toBottomOf="@id/t8"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circle Line" />

            <ImageView
                android:id="@+id/i4"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/t7"
                app:layout_constraintBottom_toBottomOf="@id/t7"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                app:srcCompat="@drawable/deleteicon" />

            <TextView
                android:id="@+id/t9"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/t8"
                app:layout_constraintBottom_toBottomOf="@id/t10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aunt Betty's" />

            <TextView
                android:id="@+id/t10"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t9"
                app:layout_constraintBottom_toBottomOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NS05: Yew Tee" />

            <TextView
                android:id="@+id/tl5"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#ff0000"
                app:layout_constraintTop_toTopOf="@id/t9"
                app:layout_constraintBottom_toBottomOf="@id/t10"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North-South Line" />

            <ImageView
                android:id="@+id/i5"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/t9"
                app:layout_constraintBottom_toBottomOf="@id/t9"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/addlist"
                app:srcCompat="@drawable/deleteicon" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>