<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStarredStationActivity">

    <TextView
        android:id="@+id/titleadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_starred_station"
        android:textColor="#000000"
        android:textSize="28sp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/linetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line:"
        android:textSize="20sp"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/titleadd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linespinner"/>

    <Spinner
        android:id="@+id/linespinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/titleadd"
        app:layout_constraintStart_toEndOf="@+id/linetxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="90dp"
        android:entries="@array/lines"/>

    <TextView
        android:id="@+id/stationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Station:"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/linetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stationspinner"/>

    <Spinner
        android:id="@+id/stationspinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/linetxt"
        app:layout_constraintStart_toEndOf="@+id/stationtxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="70dp"
        android:entries="@array/redline"/>

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/stationtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stationspinner"/>

    <EditText
        android:id="@+id/starname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="95dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/stationspinner"
        app:layout_constraintStart_toEndOf="@id/nametxt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginBottom="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>