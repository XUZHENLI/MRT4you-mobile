<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_layout"
    android:background="@drawable/box"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lt1"
        android:layout_width="80dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@id/lt2"
        android:paddingTop="7dp"
        app:layout_constraintStart_toStartOf="@id/lt2"
        app:layout_constraintEnd_toStartOf="@id/rt"
        android:text="Yew Tee" />

    <TextView
        android:id="@+id/lt2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:paddingStart="15dp"
        android:paddingBottom="7dp"
        android:text="NS03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lt1" />

    <ImageView
        android:id="@+id/deleteicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/lt1"
        app:layout_constraintStart_toEndOf="@id/rt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rt"
        app:srcCompat="@drawable/deleteicon" />

    <TextView
        android:id="@+id/rt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/lt2"
        app:layout_constraintEnd_toStartOf="@id/deleteicon"
        app:layout_constraintTop_toBottomOf="@id/lt1"
        app:layout_constraintBottom_toBottomOf="@id/lt2"
        android:text="RedLine" />


</androidx.constraintlayout.widget.ConstraintLayout>