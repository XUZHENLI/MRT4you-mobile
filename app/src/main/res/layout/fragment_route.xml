<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="480dp"
    android:background="@drawable/box"
    tools:context=".RouteFragment">

    <TextView
        android:id="@+id/textinput_placeholder"
        android:layout_width="245dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:text="Fragment for route searching"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <ImageButton
        android:id="@+id/tobookmark"
        android:contentDescription="@string/icon_for_bookmarking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        android:tint="@drawable/bottomnav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/ic_action_tobookmark"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/bookmark"
        android:contentDescription="@string/icon_for_bookmarking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        android:tint="@drawable/bottomnav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/ic_action_saved"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>